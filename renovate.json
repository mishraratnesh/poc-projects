{
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "org.springframework.boot",
        "org.springframework.*"
      ],
      "groupName": "Spring Boot & Spring Framework"
    },
    {
      "matchPackagePatterns": [
        "com.fasterxml.jackson.*"
      ],
      "groupName": "Jackson Libraries"
    },
    {
      "matchPackagePatterns": [
        "org.apache.commons.*",
        "commons-*"
      ],
      "groupName": "Apache Commons"
    },
    {
      "matchPackagePatterns": [
        "org.slf4j.*",
        "ch.qos.logback.*"
      ],
      "groupName": "Logging (SLF4J, Logback)"
    },
    {
      "matchPackagePatterns": [
        "org.junit.*",
        "org.mockito.*"
      ],
      "groupName": "Test Libraries"
    },
    {
      "matchPackagePatterns": [
        "io.spring.*",
        "org.springframework.boot"
      ],
      "groupName": "Gradle Spring Plugins"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "enabled": false
    }
  ]
}
